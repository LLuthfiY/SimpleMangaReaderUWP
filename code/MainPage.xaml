<Page
    x:Class="Manga.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Manga"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Background="#1a2229">

    <Grid x:Name="grid" KeyUp="grid_KeyUp">


        <Frame x:Name="MyFrame" Margin="0,0,0,0" TabIndex="1">



        </Frame>

        <Grid>

            <CommandBar VerticalAlignment="Bottom"
                        Background="Transparent">
                <AppBarButton x:Name="FolderPicker" 
                              Icon="Folder" Content="Open Folder"  
                              Click="FolderPicker_Click" Height="40" 
                              VerticalAlignment="Center"
                              
                              Background="#1a2229"
                              />


            </CommandBar>
        </Grid>
    </Grid>
</Page>
